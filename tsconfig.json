{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "/lib/*":["lib/*"]
    },
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "removeComments": true,
    "composite": false,
    "declarationDir": "@types"
  },
  "include": ["src/**/*", "lib/**/*"],
  "exclude": ["node_modules"]
}
